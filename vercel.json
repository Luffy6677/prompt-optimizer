{
  "version": 2,
  "name": "prompt-optimizer",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "github": {
    "autoDeployment": true
  },
  "git": {
    "deploymentEnabled": {
      "deploy": true
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 